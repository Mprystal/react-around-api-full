server {
            listen 80;
            server_name api.aroundtheusa.students.nomoreparties.site;
            location / {
                add_header 'Access-Control-Allow-Origin' '*';
                add_header 'Access-Control-Allow-Methods' 'GET,HEAD,PUT,PATCH,POST,DELETE';
                add_header 'Access-Control-Allow-Headers' 'Origin, Content-Type, access-control-allow-origin';
                if ($request_method = 'OPTIONS') {
                        return 204;
                }
                proxy_pass http://localhost:3000;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                proxy_cache_bypass $http_upgrade;
            }
        }
        server {
            listen 80;
            server_name aroundtheusa.students.nomoreparties.site;
            root /var/www/html;
            location / {
                try_files $uri /index.html;
                add_header 'Access-Control-Allow-Origin' '*';
        }

        }

